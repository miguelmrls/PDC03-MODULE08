<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC03_MODULE08.View.AddEmployee">
    <ContentPage.Content>
        <StackLayout>
            <Label Margin="10" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand"/>
            
            
            <Entry x:Name="txtName" Placeholder="Enter Name"/>
            <Entry x:Name="txtEmail" Placeholder="Enter Email"/>
            <Entry x:Name="txtAddress" Placeholder="Enter Address"/>
            <Button Text="Save" Clicked="btnSaveUpdate_Clicked"/>
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>